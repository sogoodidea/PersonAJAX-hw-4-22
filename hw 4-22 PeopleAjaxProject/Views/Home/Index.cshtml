<div class="container">
    <div class="row">
        <div class="col-md-3">
            <input id="first-name" type="text" class="form-control" placeholder="First Name" />
        </div>
        <div class="col-md-3">
            <input id="last-name" type="text" class="form-control" placeholder="Last Name" />
        </div>
        <div class="col-md-3">
            <input id="age" type="text" class="form-control" placeholder="Age" />
        </div>
        <div class="col-md-3">
            <button id="add-person" class="btn btn-primary btn-block">Add Person</button>
        </div>
        <br /><br />
    </div>
    <div class="row">
        <table id="person-table" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Age</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<!-- modal for editting a person -->
<div id="edit-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                First Name
                <input id="edit-first-name" type="text" name="firstName" class="form-control" value=""/>
                <br />
                Last Name
                <input id="edit-last-name" type="text" name="lastName" class="form-control" value=""/>
                <br />
                Age
                <input id="edit-age" type="text" name="age" class="form-control" value=""/>
                <br />
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
                    <button id="save-edit" class="btn btn-primary">Save</button>
                </div>
                <input id="edit-person-id" type="hidden" name="id" value=""/>
            </div>
        </div>
    </div>
</div>




@section Scripts{
    <script src="~/js/Index.js"></script>
}